{
  "name": "hop-2",
  "version": "1.0.0",
  "description": "Hópaverkefni 2 í vefforritun 1 HÍ haust 2020.",
  "main": "index.js",
  "scripts": {
    "test:eslint": "eslint ./src/**/*.js --fix",
    "test:stylelint": "stylelint ./src/styles/**/*.scss --syntax scss",
    "test": "concurrently npm:test:*",
    "build:rollup": "rollup -c",
    "build:sass": "node-sass --source-map-embed ./src/styles/styles.scss ./dist/styles.css",
    "build": "concurrently npm:build:*",
    "dev:browsers-sync": "browser-sync start --server --files index.html ./dist/styles.css ./dist/bundle.js",
    "dev:rollup": "rollup -c -w",
    "dev:sass": "node-sass --source-map-embed --watch --recursive ./src/styles/styles.css ./dist/styles.css",
    "dev": "concurrently npm:dev:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "node-sass": "^5.0.0",
    "rollup": "^2.33.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hafthorat/vef1-hop2.git"
  },
  "keywords": [],
  "author": "",
